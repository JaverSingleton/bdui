{
  "components": {},
  "state": {
    "id": "root",
    "componentType": "LazyColumn",
    "children": [
      {
        "id": "button",
        "componentType": "Button",
        "text": "Next JSON",
        "onClick": {
          "interactionType": "ValueCallback",
          "value": "sample-short-2.json"
        }
      },
      {
        "id": "input",
        "componentType": "Input",
        "onTextChanged": {
          "interactionType": "StatePatch",
          "patch": {
            "id": "input",
            "text": "{{args.text}}"
          }
        }
      },
      {
        "id": "addButton",
        "componentType": "Button",
        "text": "Add Button",
        "onClick": {
          "interactionType": "StatePatch",
          "patch": {
            "id": "root",
            "children": {
              "functionType": "CombineArrays",
              "arrays": [
                {
                  "componentType": "Button",
                  "text": "New button"
                }
              ]
            }
          }
        }
      }
    ]
  }
}